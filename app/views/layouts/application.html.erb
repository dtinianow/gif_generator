<!DOCTYPE html>
<html>
<head>
  <title>GifGenerator</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body style="padding-top: 70px;">
  <header class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Return Home", gifs_path %></li>
        <% if current_user && current_user.admin? %>
        <li><%= link_to "Create a New Gif", new_admin_category_path %></li>
        <li><%= link_to "Edit Categories", admin_categories_path %></li>
        <% end %>
        <li><%= link_to "See All Categories", categories_path %></li>
        <% if current_user %>
        <li><%= link_to "My Favorites", user_path(current_user) %><li>
          <li><%= link_to "Logout", logout_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "Create New Account", new_user_path %></li>
          <li><%= link_to "Login", login_path %></li>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="container">
      <%= yield %>
    </div>
  </body>
  </html>
